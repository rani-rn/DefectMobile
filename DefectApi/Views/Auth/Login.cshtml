@model DefectApi.Dto.LoginDto
@{
    Layout = null;
}

<h2>Login</h2>

<form method="post" asp-action="Login" asp-controller="Auth">
    <label>Email:</label><br/>
    <input asp-for="Email" /><br/>
    <span asp-validation-for="Email"></span><br/>

    <label>Password:</label><br/>
    <input asp-for="Password" type="password" /><br/>
    <span asp-validation-for="Password"></span><br/><br/>

    <button type="submit">Login</button>
</form>

<p>Doesn't have an account? <a asp-action="Register" asp-controller="Auth">Register here</a></p>

@if (TempData["Success"] != null)
{
    <p style="color:green">@TempData["Success"]</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
